{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentWidth": 2
	},

	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"performance": {
				"useTopLevelRegex": "error"
			}
		}
	},
	"files": {
		"ignore": ["cardinal-marketing/public/client/"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
